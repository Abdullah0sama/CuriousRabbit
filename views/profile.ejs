    <%- include('partials/header.ejs') %>
        <div class="container border-white border-3 border py-3 border-top-0">

            <div class="text-center">
                <h1 class="display-4 text-light"><%= visitedUser.username %></h1> 

                <a type="button" data-bs-toggle="modal" data-bs-target="#showFollowers" id="followersLabel">
                    <h2 class="text-light">followers: <span id="followersCount"><%= visitedUser.followers %></span></h2>
                </a>

                <a  type="button" data-bs-toggle="modal" data-bs-target="#showFollowings" id="followingsLabel">
                    <h2 class="text-light">following: <span id="followingCount"><%= visitedUser.following %></span></h2>
                </a>

                <% if(user && user.username != visitedUser.username) { %>
                    <p id="followBtn" ></p>
                <% } %>
            </div>
            
        
        <div class="modal fade" id="showFollowers" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Followers:</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div id="followersNames" class="list-group list-group-flush"></div>
                    </div>
                    
                    </div>
                </div>
        </div>

        <div class="modal fade" id="showFollowings" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Following:</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="followingNames" class="list-group list-group-flush"></div>
                </div>
                
                </div>
            </div>
        </div>
            
        
            <div class="d-flex flex-column align-items-center">
                

                <form class="my-3  w-75" id="questionForm" name="questionForm">
                    <textarea class="form-control" name="content" id="questionContent"></textarea>
    
                    <div class="form-check form-switch my-1">
                        <input class="form-check-input" type="checkbox" id="anonymousToggle" checked name="isAnonymous">
                        <label class="form-check-label text-light fs-4" for="anonymousToggle">Anonymous</label>
                    </div>
    
                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
                <div id="answers" class="w-75"></div>
            </div>

        </div>

        <script src="/scripts/profile.js">
        </script>
    <%- include('partials/footer.ejs') %>
