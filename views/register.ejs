<div class="container d-flex align-items-center">
    <div class="bg-light p-5 rounded border  mx-auto w-50">
        <h1 class="text-center">Register</h1>
        <form method="POST" action="/register">
            <div class="mb-3">
                <label  class="form-label fs-4">Email</label>
                <input type="email" class="form-control form-control-lg" name="user[email]">
            </div>
            <div class="mb-3">
                <label  class="form-label fs-4">Username</label>
                <input type="text" class="form-control form-control-lg" name="user[username]">
            </div>
            <div class="mb-3">
                <label  class="form-label fs-4">Password</label>
                <input type="password" class="form-control form-control-lg" name="user[password]" >
            </div>
            <button type="submit" class="btn btn-lg btn-primary">Submit</button>
        </form>
    </div>
</div>

